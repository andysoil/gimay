<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".healthCheck.classItem.fragment_item_detial">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fuTable"
            android:shrinkColumns="2">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_below="@+id/fuTable"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView11" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:layout_below="@+id/fuTable"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="單位/---"
                    android:gravity="center"
                    android:paddingLeft = "50dp"
                    android:layout_below="@+id/fuTable"
                    android:layout_toStartOf="@+id/time"
                    android:textSize= "18sp"
                    android:layout_marginEnd="32dp"
                    android:layout_column="6" />

                <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="標準值/(1)正常"
                        android:textSize= "18sp"
                        android:gravity="center"
                        android:layout_column="33"
                        android:layout_below="@+id/fuTable"
                        android:layout_alignParentEnd="true" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="歷史檢查值"
            android:id="@+id/textView13"
            android:textSize= "20sp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/fuTable"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="檢驗說明"
            android:id="@+id/textView15"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView13" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize= "20sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/history_value"
            android:layout_below="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_above="@+id/textView15" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/reason"
            android:layout_below="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</FrameLayout>
