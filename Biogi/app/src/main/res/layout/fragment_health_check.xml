<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".healthCheck.healthCheck">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="healthscore"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:id="@+id/healthScore"
            android:layout_marginStart="37dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/spinner"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="總評與建議："
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView6"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/healthScore"
            android:layout_alignStart="@+id/healthScore" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="doctorComment"
            android:layout_marginRight="10dp"
            android:id="@+id/doctorComment"

            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/healthScore" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/spinner"
            android:ellipsize="marquee"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
